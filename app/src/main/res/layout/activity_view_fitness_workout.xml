<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewFitnessWorkout">
    <LinearLayout
        android:id="@+id/fitness_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fitness_tracker_title"
            android:textSize="40sp"
            android:background="@color/appThemeColor"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            style="@style/TitleTextShadow"/>
        <TextView
            android:id="@+id/view_workouts_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/appThemeColor"
            android:gravity="center"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appThemeColor"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/workout_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appThemeColor"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/go_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/button_minimum_width_registration1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"
            android:background="@drawable/custom_button"
            android:text="@string/go_back_btn_text"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:id="@+id/workout_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appThemeColor"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="@string/list_of_workouts_title_text"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>